{
    "name": "handwash-monorepo",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*",
        "infra"
    ],
    "scripts": {
        "dev:web": "npm -w apps/web run dev",
        "build:web": "npm -w apps/web run build",
        "dev:api": "npm -w apps/api run dev",
        "build:api": "npm -w apps/api run build",
        "test:shared": "npm -w packages/shared run test",
        "deploy": "npm -w infra run deploy",
        "diff": "npm -w infra run diff"
    }
}